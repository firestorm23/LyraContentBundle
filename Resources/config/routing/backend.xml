<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="lyra_content_admin_page_edit" pattern="/page/{id}/edit">
        <default key="_controller">LyraContentBundle:Page:edit</default>
    </route>

    <route id="lyra_content_admin_page_new" pattern="/page/new">
        <default key="_controller">LyraContentBundle:Page:new </default>
    </route>

    <route id="lyra_content_admin_list" pattern="/content">
        <default key="_controller">LyraContentBundle:Admin:index</default>
    </route>

    <route id="lyra_content_admin_new" pattern="/{type}/new">
        <default key="_controller">LyraContentBundle:Admin:new</default>
    </route>

    <route id="lyra_content_admin_edit" pattern="/{type}/{id}/edit">
        <default key="_controller">LyraContentBundle:Admin:edit </default>
    </route>

    <route id="lyra_content_admin_delete" pattern="/content/{id}/delete">
        <default key="_controller">LyraContentBundle:Admin:delete</default>
    </route>

    <route id="lyra_content_admin_move" pattern="/content/{id}/move">
        <default key="_controller">LyraContentBundle:Admin:move</default>
    </route>

    <route id="lyra_content_admin_object" pattern="/content/object">
        <default key="_controller">LyraContentBundle:Admin:object</default>
    </route>

</routes>
