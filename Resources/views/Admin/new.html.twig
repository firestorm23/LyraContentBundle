{% extends "LyraContentBundle:Admin:form.html.twig" %}
{% form_theme form 'LyraContentBundle:Admin:form_theme.html.twig' %}
{% block form_title %}
<h1>New Content</h1>
{% endblock %}
{% block form %}
<form class="ly-form" action="{{ path('lyra_content_admin_new', {'type' : 'page' }) }}" method="post">
    {% include 'LyraContentBundle:Admin:fields.html.twig' with { 'form': form } %}
    {{ form_row(form._token) }}
    <hr class="clear" />
    <input type="submit" value="Save" />
</form>
{% endblock %}
