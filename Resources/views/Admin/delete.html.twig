{% extends "LyraContentBundle::admin_layout.html.twig" %}

{% block content %}
<div id="confirm-delete">
    <h1>Delete content</h1>
    The following content items will be permanently deleted:
    <ul>
        <li>{{ content.title }}</li>
        {% for child in children %}
            <li class="depth-{{ child.depth }}">{{ child.title }}</li>
        {% endfor %}
    </ul>
    This operation cannot be undone, please confirm.
    <form id="ly-form" action="{{ path('lyra_content_admin_delete', { 'id': content.id }) }}" method="post">

    <input type="submit" name ="submit" value="Yes, delete" />
    <a href="{{ path('lyra_content_admin_list') }}">No, abort</a>
    </form>
</div>
{% endblock %}
