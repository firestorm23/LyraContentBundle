{% extends "LyraContentBundle:Admin:form.html.twig" %}
{% block form_title %}
<h1>{{ 'form.delete.title'|trans({}, 'LyraContentBundle') }}</h1>
{% endblock %}
{% block button_bar %}{% endblock %}
{% block form %}
    <p>{{ 'form.delete.confirmation'|trans({}, 'LyraContentBundle') }}</p>
    <ul>
        <li>{{ content.title }}</li>
        {% for child in children %}
            <li class="depth-{{ child.depth }}">{{ child.title }}</li>
        {% endfor %}
    </ul>
    <p>{{ 'form.delete.confirmation2'|trans({}, 'LyraContentBundle') }}</p>
    <form id="ly-form" action="{{ path('lyra_content_admin_delete', { 'id': content.id }) }}" method="post">
    {{ form_rest(form) }}
    <hr class="clear" />
    <input type="submit" name ="submit" value="{{ 'form.delete.submit'|trans({}, 'LyraContentBundle') }}" />
    <a href="{{ path('lyra_content_admin_list') }}">{{ 'form.delete.cancel'|trans({}, 'LyraContentBundle') }}</a>
    </form>
{% endblock %}
